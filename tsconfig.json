{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",  // Base directory for resolving modules
    "paths": {
      "@utils": ["utils/index"],
      "@types": ["types/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
